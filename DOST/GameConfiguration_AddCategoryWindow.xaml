<Window x:Class="DOST.GameConfiguration_AddCategoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DOST"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:p="clr-namespace:DOST.Properties"
        Title="{x:Static p:Resources.AddCategoryWindowTitle}" Height="189.474" Width="300.94" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="{x:Static p:Resources.AddCategoryNameText}" HorizontalAlignment="Left" Margin="38,26,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="categoryNameTextBox" HorizontalAlignment="Left" Height="23" Margin="43,52,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="216" MaxLength="45" />
        <Button x:Name="addButton" Content="{x:Static p:Resources.AddButton}" HorizontalAlignment="Left" Margin="90,95,0,0" VerticalAlignment="Top" Width="120" Height="33" Click="AddButton_Click" />
    </Grid>
</Window>
